@using ETickets.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETickets</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETickets.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" width="125" height="50" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h4>Movie Point</h4></a>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home </a>
                        </li>

                        @if (User.IsInRole(SD.adminRole))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management System</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="admin" asp-controller="movies" asp-action="index" >movies</a>
                                    <a class="dropdown-item" asp-area="admin" asp-controller="actors" asp-action="index" >Actors</a>
                                    <a class="dropdown-item" asp-area="admin" asp-controller="categories" asp-action="index">categories</a>
                                    <a class="dropdown-item" asp-area="admin" asp-controller="cinemas" asp-action="index">cinemas</a>
            
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Separated link</a>
                                </div>
                            </li>
                        }

                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Categories </a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cinemas" asp-action="Index">Cinemas </a>
                        </li>    
                        @if (!(User.IsInRole(SD.adminRole)))
                        {    
                        <li>
                            <a class="nav-link text-dark" asp-area="customer" asp-controller="cart" asp-action="Index"><i class="bi bi-cart"></i> </a>
                        </li>
                        }
                    </ul>
                    <div class="d-flex ms-auto">
                        <form asp-action="index" asp-controller="Search" class="d-flex">
                            <input type="text" class="form-control me-2" placeholder="Search for movie..." name="name">
                            <button type="submit" class="btn btn-light text-dark  ms-1">Search</button>
                        </form>
                    </div>
                    <div>
                        <partial name="_LoginPartial"></partial>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            © 2024 - ETickets - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
