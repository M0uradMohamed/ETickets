@model IEnumerable<Movie>

<style>
    .not-found-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full viewport height */
    }

    .not-found-box {
        background-color: #f8d7da; /* Light red background */
        color: #721c24; /* Dark red text */
        padding: 20px;
        border: 1px solid #f5c6cb;
        border-radius: 10px;
        text-align: center;
        margin-top: -150px; /* Adjust this value as needed */
    }
</style>

@{
    if (Model.Count() != 0)
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-4">
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="row g-0">
                                <div class="col-md-4">
                                </div>

                                <div class="card-body">
                                    <img src="~/images/movies/@item.ImgUrl" class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="card-footer">
                                    @item.Name
                                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary"> view Movie</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="not-found-container">
            <div class="not-found-box">
                <h1>No Movie Found</h1>
            </div>
        </div>
    }
}
